<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Daftar List</h4>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Slug</th>
                                <th scope="col" style="padding-left: 50px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% lists.forEach(function(list) { %>
                                <tr>
                                    <td><%= list.name %></a></td>
                                    <td><%= list.slug %> </td>
                                    <th>
                                        <button class="btn btn-warning"><a href="/home/<%= list._id %>/edit" style="color: white;">Edit</a></button>
                                        <form action="/home/<%= list._id %>/delete?_method=delete" method="post" class="d-inline">
                                            <button class="btn btn-danger" type="submit" style="color: white;">Delete</button>
                                        </form>
                                    </th>
                                </tr>
                            <% }); %> 

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rabuncode</title>
    <link rel="stylesheet" href="../../assets/libs/bootstrap/dist/css/bootstrap.min.css">

    <style>
        body {
            width: 500px;
            margin-top: 100px;
            margin-left: 400px;
        }
    </style>
</head>
<body>


    <div class="container">
        <h2 style="margin-left: 40px; padding-left: 130px;">Login</h2>
        <div class="card" style="width: 40rem; margin-top: 30px;">
            <div class="card-body">
                <form action="/login" method="POST" >
                    
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="enter your email">
                        <% if(locals.msgEmail) { %>
                            <div style="color: rgb(163, 7, 7); margin-top: 5p; padding-left: 5px;" role="danger"><%= msgEmail %></div>
                        <% } %>
                    </div>
                        
                    <br>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="enter your password">
                        <% if(locals.msgPassword) { %>
                            <div style="color: rgb(163, 7, 7); margin-top: 5p; padding-left: 5px;" role="danger"><%= msgPassword %></div>
                        <% } %>
                    </div>
                    
                    <br>
                    <br>
                    
                    <button type="submit" class="btn btn-primary">Kirim</button>
                    <a href="/" class="btn btn-warning" style="color: white;">Kembali</a>
                </form>

            </div>
        </div>

    </div>

    

      
    <script src="../../assets/libs/bootstrap/dist/js/bootstrap.min.js"></script>

</body>
</html>